@page
@model IndexModel
@{
    ViewData["Title"] = "Simple Store - Accelerate your eCommerce Business";
}

<div class="home">
    <!-- Hero Section-->
    <div class="container">
        <div class="row text-center">
            @{
                if (!string.IsNullOrWhiteSpace(Model.ContactFormMessage))
                {
                    <div class="col-md-12">
                        <div class="alert alert-success" role="alert">
                            @Model.ContactFormMessage
                        </div>
                    </div>

                }
            }
            <div class="col-md-12">
                <div class="hero-img wow fadeIn">
                    <img class="img-fluid" src="~/images/big.png" alt="Home" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="hero-content wow fadeIn">
                    <h1>Build the perfect ecommerce store</h1>
                    <p>
                        We take care of the backend so you can create the perfect frontend for your customers
                    </p>
                    <a class="btn-action js-scroll-trigger" href="#signup">Get Started - Coming Soon</a>
                </div>
            </div>

        </div>
    </div>
</div><!-- Hero End -->


